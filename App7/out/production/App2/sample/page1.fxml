<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="javafx-sdk-11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane fx:id="myplane" prefHeight="493.0" prefWidth="780.0" styleClass="ImageView">
         <stylesheets>
            <URL value="@style.css" />
         </stylesheets>
         <children>
            <Button fx:id="myButton" layoutX="330.0" layoutY="441.0" mnemonicParsing="false" onAction="#displayImage" prefHeight="38.0" prefWidth="118.0" text="Next" />
            <BorderPane fx:id="mainPane" layoutX="-1.0" layoutY="1.0" prefHeight="52.0" prefWidth="780.0">
               <left>
                  <Button fx:id="btnScene1" mnemonicParsing="false" onAction="#handleBtn1" prefHeight="25.0" prefWidth="100.0" text="About" BorderPane.alignment="CENTER" />
               </left>
               <center>
                  <Button fx:id="btnScene2" mnemonicParsing="false" onAction="#handleBtn2" prefHeight="25.0" prefWidth="158.0" text="University" BorderPane.alignment="CENTER" />
               </center>
               <right>
                  <Button fx:id="btn_exit" mnemonicParsing="false" onAction="#onClick_btn_exit" prefHeight="25.0" prefWidth="117.0" text="Exit" BorderPane.alignment="CENTER" />
               </right>
            </BorderPane>
            <ImageView fx:id="myImageView" fitHeight="327.0" fitWidth="494.0" layoutX="142.0" layoutY="67.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@meme1.jpg" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </children>
</GridPane>
